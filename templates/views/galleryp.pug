extends ../layouts/default

block intro
	.container
		h1 Gallery Public

block content
	.container
		if galleriesp.length
			each galleryp in galleriesp
				h2= galleryp.name
					if galleryp.publishedDate
						.pull-right.text-muted= galleryp._.publishedDate.format('Do MMM YYYY')

				.row.gallery-images
					if galleryp.heroImage.exists
						.col-sm-4.col-md-4.gallery-image: img(src=galleryp._.heroImage.limit(680,680)).img-rounded
						.col-sm-8.col-md-8: .row
							each image in galleryp.images
								.col-xs-4.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
					else
						each image in galleryp.images
							.col-xs-6.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
		else
			h3.text-muted There are no image galleries yet.
