extends ../layouts/default

block intro
	.container
		h1 Gallery Public

block content
	.container
		if publics.length
			each public in publics
				h2= public.name
					if public.publishedDate
						.pull-right.text-muted= public._.publishedDate.format('Do MMM YYYY')

				.row.gallery-images
					if public.heroImage.exists
						.col-sm-4.col-md-4.gallery-image: img(src=public._.heroImage.limit(680,680)).img-rounded
						.col-sm-8.col-md-8: .row
							each image in public.images
								.col-xs-4.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
					else
						each image in public.images
							.col-xs-6.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
		else
			h3.text-muted There are no image galleries yet.
